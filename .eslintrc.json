{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "plugins": ["jasmine"],
  "rules": {
    "no-param-reassign": [0],
    "func-names": [0],
    "space-before-function-paren": [2, "never"],
    "prefer-template": [0],
    "global-require": [0],
    "no-plusplus": [0]
  },
  "globals": {
    "atom": true,
    "document": true,
    "waitsForPromise": true
  },
  "env": {
    "jasmine": true
  }
}
